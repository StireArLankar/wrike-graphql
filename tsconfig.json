{
  "compilerOptions": {
    "noEmit": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "rootDir": "./",
    "outDir": "./lib",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "app/*": ["*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "bonus/**/*"]
}
